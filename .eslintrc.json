{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },
  "globals": {
    "window": true,
    "$": true,
    "THREE": true,
    "Stats": true,
    "dat": true
  },
  "rules": {
    "no-var": 2,
    "no-use-before-define": "off",
    "linebreak-style": [0, "windows"],
    "no-console": 0,
    "func-names": 0,
    "prefer-const": 0,
    "prefer-template": 0,
    "no-restricted-syntax": 0,
    "no-plusplus": 0,
    "max-len": 0,
    "prefer-destructuring": 0,
    "comma-dangle": [
      0,
      "never"
    ],
    "no-underscore-dangle": "off",
    "import/no-extraneous-dependencies": 0
  }
}